{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "checkJs": true,
    "skipLibCheck": true,
  },
  "include": ["src/**/**/**/*.ts"], // Add at least one input file or directory
  "exclude": ["node_modules"]
}